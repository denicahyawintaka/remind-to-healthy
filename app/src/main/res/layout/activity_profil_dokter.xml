<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgound_doktor"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="com.pt2.ProfilDokter">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@color/background_input_konsultasi"
        android:id="@+id/atas"/>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/profil"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:id="@+id/imageView2" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_below="@id/atas">


                <TextView
                    android:id="@+id/nama"
                    android:text="NAMA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/white"
                    android:ems="7"
                    android:padding="10dp"
                    android:textColor="@color/input_register" />


            <TextView
                android:id="@+id/email"
                android:text="EMAIL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/white"
                android:padding="10dp"
                android:textColor="@color/input_register"/>


            <TextView
                android:id="@+id/kontak"
                android:text="NO HP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/white"
                android:padding="10dp"
                android:textColor="@color/input_register" />

            <TextView
                android:id="@+id/alamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="ALAMAT"
                android:background="@color/white"
                android:padding="10dp"
                android:textColor="@color/input_register" />

        </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="DR. NAMA"
        android:id="@+id/panggilan"
        android:layout_below="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2" />
</RelativeLayout>
