<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/backgound_doktor"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="com.pt2.menuDokter">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:background="@drawable/lingkaran"
        android:id="@+id/imageView"
        android:layout_centerInParent="true" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/profil"
        android:layout_marginTop="33dp"
        android:layout_marginBottom="-10dp"
        android:layout_alignTop="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:id="@+id/profil"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PROFIL"
        android:layout_below="@+id/profil"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView2" />

    <ImageButton
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:background="@drawable/input_konsultasi"
    android:layout_marginTop="33dp"
    android:id="@+id/inputKonsultasi"
        android:layout_below="@+id/textView2"
        android:layout_toStartOf="@+id/lihatPasien"
        android:layout_marginEnd="23dp" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/lihat_pasien"
        android:id="@+id/lihatPasien"
        android:layout_alignTop="@+id/inputKonsultasi"
        android:layout_toEndOf="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INPUT KONSULTASI"
        android:id="@+id/textView3"
        android:layout_below="@+id/inputKonsultasi"
        android:layout_alignEnd="@+id/inputKonsultasi" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LIHAT PASIEN"
        android:id="@+id/textView4"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignEnd="@+id/lihatPasien" />


</RelativeLayout>
